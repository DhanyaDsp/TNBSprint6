<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/title_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin25"
        android:gravity="center"
        android:text="Delete All?"
        android:textColor="@color/black_60"
        android:textSize="@dimen/text_size_medium" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/message_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin13"
        android:gravity="center"
        android:text="Once you delete all messages, you can't undo it."
        android:textSize="@dimen/text_size_medium"
        android:layout_marginRight="@dimen/margin20"
        android:layout_marginLeft="@dimen/margin20"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_padding"
        android:layout_marginBottom="@dimen/large_padding">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_medium1"
            android:background="@color/light_black"
            android:layout_marginLeft="@dimen/margin20"
            android:layout_marginRight="@dimen/margin10"/>

        <Button
            android:id="@+id/btnDeleteAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@color/red"
            android:text="Delete All"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_medium1"
            android:layout_marginRight="@dimen/margin20"
            android:layout_marginLeft="@dimen/margin10" />

    </LinearLayout>
</LinearLayout>