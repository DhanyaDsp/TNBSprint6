<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/medium_padding"
    android:paddingTop="@dimen/medium_padding"
    android:paddingRight="@dimen/medium_padding"
    android:paddingBottom="@dimen/medium_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvAccountName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/museosans_500"
            android:text="Home"
            android:textColor="@android:color/white" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvLastBilledAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/museosans_500"
            android:gravity="right"
            android:text="RM 109.00"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/small_padding"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvAccountID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/museosans_500"
            android:text="22074934323"
            android:textColor="@color/text_field_hint_color"
            android:textSize="@dimen/text_size_small" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/museosans_500"
            android:gravity="right"
            android:text="16 Aug"
            android:textColor="@color/text_field_hint_color"
            android:textSize="@dimen/text_size_medium1" />

    </LinearLayout>


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvConsumptionReached"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_padding"
        android:background="@drawable/rounded_yellow_solid"
        android:fontFamily="@font/museosans_500"
        android:paddingLeft="@dimen/medium_padding"
        android:paddingRight="@dimen/medium_padding"
        android:paddingTop="5dp"
        android:visibility="gone"
        android:paddingBottom="5dp"
        android:text="Consumption reached"
        android:textSize="@dimen/text_size_10" />

</LinearLayout>